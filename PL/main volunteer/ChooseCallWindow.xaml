<Window x:Class="PL.main_volunteer.ChooseCallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Choose Call for Volunteer" Height="600" Width="1000">

    <DockPanel>
        <TextBlock DockPanel.Dock="Top" Text="Choose Call for Volunteer"
                   FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="10"/>

        <!-- Filter and Sort Controls -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <TextBlock Text="Filter by Distance (km):" VerticalAlignment="Center" Margin="5"/>
            <TextBox Width="80" Margin="0,0,20,0" VerticalAlignment="Center"/>

            <TextBlock Text="Sort by:" VerticalAlignment="Center" Margin="10"/>
            <ComboBox Width="150" Margin="0,0,10,0" VerticalAlignment="Center">
                <ComboBoxItem Content="Distance"/>
                <ComboBoxItem Content="Description"/>
                <ComboBoxItem Content="Opening Time"/>
            </ComboBox>
        </StackPanel>

        <!-- Calls List -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Column Definitions -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>

                <!-- Column Headers with Borders -->
                <Border Grid.Column="0" BorderBrush="Black" BorderThickness="1">
                    <TextBlock Text="ID" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"/>
                </Border>
                <Border Grid.Column="1" BorderBrush="Black" BorderThickness="1">
                    <TextBlock Text="Call Type" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"/>
                </Border>
                <Border Grid.Column="2" BorderBrush="Black" BorderThickness="1">
                    <TextBlock Text="Address" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"/>
                </Border>
                <Border Grid.Column="3" BorderBrush="Black" BorderThickness="1">
                    <TextBlock Text="Opening Time" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"/>
                </Border>
                <Border Grid.Column="4" BorderBrush="Black" BorderThickness="1">
                    <TextBlock Text="Distance" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"/>
                </Border>
                <Border Grid.Column="5" BorderBrush="Black" BorderThickness="1">
                    <TextBlock Text="Select" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"/>
                </Border>

                <!-- Calls Data with Borders -->
                <ListBox Grid.Row="1" Grid.ColumnSpan="6" ItemsSource="{Binding OpenCallList}" SelectedItem="{Binding SelectedCall}" SelectionChanged="ListBox_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" BorderBrush="Black" BorderThickness="1">
                                    <TextBlock Text="{Binding Id}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"/>
                                </Border>
                                <Border Grid.Column="1" BorderBrush="Black" BorderThickness="1">
                                    <TextBlock Text="{Binding CallType}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"/>
                                </Border>
                                <Border Grid.Column="2" BorderBrush="Black" BorderThickness="1">
                                    <TextBlock Text="{Binding FullAddress}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"/>
                                </Border>
                                <Border Grid.Column="3" BorderBrush="Black" BorderThickness="1">
                                    <TextBlock Text="{Binding OpenTime}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"/>
                                </Border>
                                <Border Grid.Column="4" BorderBrush="Black" BorderThickness="1">
                                    <TextBlock Text="{Binding DistanceFromVolunteer}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"/>
                                </Border>
                                <Border Grid.Column="5" BorderBrush="Black" BorderThickness="1">
                                    <Button Content="Select" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5" Click="SelectButton_Click"/>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </ScrollViewer>
    </DockPanel>
</Window>
