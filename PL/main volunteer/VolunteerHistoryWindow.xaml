<Window x:Class="PL.main_volunteer.VolunteerHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Volunteer Call History" Height="450" Width="800">
    <Grid>
        <!-- הגדרת שורות ועמודות -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- שורת הכותרת הראשית -->
            <RowDefinition Height="Auto"/>
            <!-- שורת הכותרות של השדות -->
            <RowDefinition Height="*"/>
            <!-- שורת הנתונים -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- כותרת ראשית -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="6" Text="Volunteer Call History"
                   FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="10"/>

        <!-- שורת כותרות השדות -->
        <Border Grid.Row="1" Grid.Column="0" BorderBrush="Black" BorderThickness="1">
            <TextBlock Text="ID" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"/>
        </Border>
        <Border Grid.Row="1" Grid.Column="1" BorderBrush="Black" BorderThickness="1">
            <TextBlock Text="Call Type" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"/>
        </Border>
        <Border Grid.Row="1" Grid.Column="2" BorderBrush="Black" BorderThickness="1">
            <TextBlock Text="Address" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"/>
        </Border>
        <Border Grid.Row="1" Grid.Column="3" BorderBrush="Black" BorderThickness="1">
            <TextBlock Text="Open Time" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"/>
        </Border>
        <Border Grid.Row="1" Grid.Column="4" BorderBrush="Black" BorderThickness="1">
            <TextBlock Text="End Time" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"/>
        </Border>
        <Border Grid.Row="1" Grid.Column="5" BorderBrush="Black" BorderThickness="1">
            <TextBlock Text="Completion Status" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"/>
        </Border>

        <!-- שורת הנתונים -->
        <ListBox ItemsSource="{Binding}" Grid.Row="2" Grid.ColumnSpan="6" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- הצגת נתונים עם מסגרת סביב כל שדה -->
                        <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1">
                            <TextBlock Text="{Binding Id}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"/>
                        </Border>
                        <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1">
                            <TextBlock Text="{Binding CallType}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"/>
                        </Border>
                        <Border Grid.Column="2" BorderBrush="Gray" BorderThickness="1">
                            <TextBlock Text="{Binding FullAddress}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"/>
                        </Border>
                        <Border Grid.Column="3" BorderBrush="Gray" BorderThickness="1">
                            <TextBlock Text="{Binding OpenTime}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"/>
                        </Border>
                        <Border Grid.Column="4" BorderBrush="Gray" BorderThickness="1">
                            <TextBlock Text="{Binding EndTime}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"/>
                        </Border>
                        <Border Grid.Column="5" BorderBrush="Gray" BorderThickness="1">
                            <TextBlock Text="{Binding CompletionStatus}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"/>
                        </Border>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
