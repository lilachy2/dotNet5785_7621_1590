<Window x:Class="PL.LoginSystem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PL"
        Title="Login System" Height="450" Width="800">
  

    <Grid Background="#F0F0F0">
        <!-- Title -->
        <Label Content="Login System" 
               FontSize="24" 
               FontWeight="Bold" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Top" 
               Margin="0,20,0,0" />

        <!-- Input Section -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <!-- ID TextBox -->
            <TextBox 
                Text="{Binding Id, UpdateSourceTrigger=PropertyChanged}" 
                GotFocus="IdTextBox_GotFocus" 
                LostFocus="IdTextBox_LostFocus" 
                HorizontalAlignment="Stretch" 
                Padding="10" 
                FontSize="16" 
                Foreground="Gray" />

            <!-- PasswordBox -->
            <PasswordBox 
                x:Name="PasswordBox"
                Password="{Binding Password, Mode=TwoWay, Converter={StaticResource PasswordConverter}}"
                PasswordChanged="PasswordBox_PasswordChanged"
                GotFocus="PasswordBox_GotFocus" 
                LostFocus="PasswordBox_LostFocus" 
                HorizontalAlignment="Stretch" 
                Padding="10" 
                FontSize="16" 
                Foreground="Gray" />

            <!-- Login Button -->
            <Button Content="Login" 
                    FontSize="16" 
                    FontWeight="Bold" 
                    Background="#4DA1A9" 
                    Foreground="White" 
                    Padding="10" 
                    HorizontalAlignment="Stretch" 
                    Click="LoginButton_Click" />
        </StackPanel>
    </Grid>
</Window>
