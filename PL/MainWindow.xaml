<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="System Management" Height="600" Width="800"
        Closed="Window_Closed"
        Loaded="MainWindow_Loaded"
        WindowStartupLocation="CenterScreen"
        Background="#F0F4F8">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- System Clock -->
        <Border Grid.Row="0" 
                Background="#2C3E50" 
                Padding="20" 
                Margin="0,0,0,10">
            <Label Content="{Binding CurrentTime, StringFormat='{}{0:HH:mm:ss}'}" 
                   HorizontalAlignment="Center" 
                   Foreground="White"
                   FontSize="40" 
                   FontWeight="Light"/>
        </Border>

        <!-- Clock Advancement Buttons -->
        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,10">
            <Button Content="Add One Minute" 
                    Click="AddOneMinute_Click" 
                    Margin="5"
                    Padding="15,10"
                    Background="#3498DB"
                    Foreground="White"
                    BorderThickness="0"/>
            <Button Content="Add One Hour" 
                    Click="AddOneHour_Click" 
                    Margin="5"
                    Padding="15,10"
                    Background="#3498DB"
                    Foreground="White"
                    BorderThickness="0"/>
            <Button Content="Add One Day" 
                    Click="AddOneDay_Click" 
                    Margin="5"
                    Padding="15,10"
                    Background="#3498DB"
                    Foreground="White"
                    BorderThickness="0"/>
            <Button Content="Add One Month" 
                    Click="AddOneMonth_Click" 
                    Margin="5"
                    Padding="15,10"
                    Background="#3498DB"
                    Foreground="White"
                    BorderThickness="0"/>
            <Button Content="Add One Year" 
                    Click="AddOneYear_Click" 
                    Margin="5"
                    Padding="15,10"
                    Background="#3498DB"
                    Foreground="White"
                    BorderThickness="0"/>
        </StackPanel>

        <!-- Configuration Area -->
        <Grid Grid.Row="2" Margin="244,10,244,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Label Content="Risk Range:" 
                   Grid.Column="0" 
                   VerticalAlignment="Center" 
                   Foreground="#2C3E50"/>

            <TextBox Text="{Binding Path=RiskRange, Mode=TwoWay}" 
                     Grid.Column="1"
                     Margin="10,0"
                     TextChanged="RiskRangeTextBox_TextChanged"
                     BorderBrush="#3498DB"
                     BorderThickness="1"
                     Padding="5"/>

            <Button Content="Update" 
                    Grid.Column="2"
                    Click="UpdateRiskRange_Click"
                    Margin="5"
                    Padding="15,10"
                    Background="#E74C3C"
                    Foreground="White"
                    BorderThickness="0"/>
        </Grid>

        <!-- Navigation Buttons -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,10">
            <Button Content="Initialize Database" 
                    Click="InitializeDatabase_Click"
                    Margin="5"
                    Padding="15,10"
                    Background="#F39C12"
                    Foreground="White"
                    BorderThickness="0"/>
            <Button Content="Reset Database" 
                    Click="ResetDatabase_Click"
                    Margin="5"
                    Padding="15,10"
                    Background="#8E44AD"
                    Foreground="White"
                    BorderThickness="0"/>
           
        </StackPanel>

        <!-- Simulator Controls -->
        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,10">
            <Label Content="Enter time to simulate (in minute)"
                   FontWeight="Bold"
                   VerticalAlignment="Center"
                   Margin="5,0"/>
            <TextBox Text="{Binding Interval, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Width="100"
                     Height="30"
                     VerticalAlignment="Center"
                     Padding="5"
                     Margin="5,0"
                     TextChanged="TextBox_TextChanged"/>
            <Button Content="{Binding IsSimulatorRunning, Converter={StaticResource ConverterSimulatorStateKey}}"
                    Click="StartSimulator_Click"
                    Margin="5,0"
                    Padding="15,10"
                   Background="#16A085"
                   Foreground="White"
                    BorderThickness="0"
                    VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Call Handling Section -->
        <Grid Grid.Row="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Call Handling and Volunteer Buttons -->
            <StackPanel Grid.Row="0" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="0,10">
                <Button Content="Handle Calls" 
                        Click="HandleCalls_Click"
                        Margin="5"
                        Padding="15,10"
                        Background="#E74C3C"
                        Foreground="White"
                        BorderThickness="0"/>
                <Button Content="Handle Volunteers" 
                        Click="HandleVolunteers_Click"
                        Margin="5"
                        Padding="15,10"
                        Background="#E74C3C"
                        Foreground="White"
                        BorderThickness="0"/>
            </StackPanel>

            <!-- Call Statuses ListView -->
            <ListView Grid.Row="1" 
                      ItemsSource="{Binding CallStatusesCounts, UpdateSourceTrigger=PropertyChanged}" 
                      Margin="20"
                      MouseDoubleClick="CallList_MouseDoubleClick">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Status" Width="150" DisplayMemberBinding="{Binding Key}"/>
                        <GridViewColumn Header="Count" Width="100" DisplayMemberBinding="{Binding Value}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
    </Grid>
</Window>