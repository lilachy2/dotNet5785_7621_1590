<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800"
        Closed="Window_Closed"
        Loaded="MainWindow_Loaded"
        FontFamily="Courier New"
        FontWeight="Bold"
        FontSize="18">

    <!-- Main Grid with pastel color -->
    <Grid RenderTransformOrigin="0.53,0.545" Background="#F0F8FF">
        <!-- Light pastel blue background -->
        <!-- Define rows and columns -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Row for time display -->
            <RowDefinition Height="Auto"/>
            <!-- Row for clock advancing buttons -->
            <RowDefinition Height="Auto"/>
            <!-- Row for configuration buttons -->
            <RowDefinition Height="Auto"/>
            <!-- Row for handle calls and handle volunteers -->
            <RowDefinition Height="1*"/>
            <!-- Row for remaining content -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <!-- Single column for simplicity -->
        </Grid.ColumnDefinitions>

        <!-- Label for the system clock (hour and minutes) with pastel background -->
        <Label Content="{Binding CurrentTime, StringFormat='{}{0:HH:mm:ss}'}" 
               HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="40" Grid.Row="0"
               Background="#E6E6FA" Padding="10" Margin="0,10,0,0" Grid.RowSpan="2"/>
        <!-- Light lavender pastel background -->

        <!-- StackPanel for buttons to advance the clock -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,71,0,10" Background="#FFFAF0" Width="780">
            <!-- Ivory pastel background -->
            <Button Content="Add One Minute" Click="AddOneMinute_Click" Padding="3" Margin="5" Background="#B0E0E6"/>
            <!-- Powder Blue -->
            <Button Content="Add One Hour" Click="AddOneHour_Click" Padding="5" Margin="5" Background="#B0E0E6"/>
            <Button Content="Add One Day" Click="AddOneDay_Click" Padding="5" Margin="5" Background="#B0E0E6"/>
            <Button Content="Add One Month" Click="AddOneMonth_Click" Padding="5" Margin="5" Background="#B0E0E6"/>
            <Button Content="Add One Year" Click="AddOneYear_Click" Padding="5" Margin="5" Background="#B0E0E6"/>
        </StackPanel>

        <!-- Configuration Variables Area (Row 2) -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Configuration variable -->
                <RowDefinition Height="Auto"/>
                <!-- Update variable button -->
            </Grid.RowDefinitions>

            <!-- Risk Range Configuration -->
            <Label Content="Risk Range:" HorizontalAlignment="Center" VerticalAlignment="Center" Width="106" Height="36" Background="#FFE4E1" Grid.Row="1"/>
            <!-- Misty Rose pastel -->

            <!-- TextBox for Risk Range with Binding to Dependency Property -->
            <TextBox x:Name="RiskRangeTextBox" 
                     Text="{Binding Path=RiskRange, Mode=TwoWay}" Margin="481,0,207,0" TextChanged="RiskRangeTextBox_TextChanged"
                     Background="#F5FFFA" Height="30" VerticalAlignment="Center" Grid.Row="1"/>
            <!-- Mint Cream pastel -->

            <!-- Button to update Risk Range -->
            <Button Content="Update Risk Range" 
                    HorizontalAlignment="Left" 
                    Margin="369,55,0,-48" 
                    Click="UpdateRiskRange_Click" Grid.Row="1" Background="#B0E0E6" Width="224"/>
        </Grid>

        <!-- StackPanel for Navigation buttons (Row 3) -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Left" Margin="118,207,0,91" Width="614" Background="#FFFAF0">
            <Button Content="Initialize Database" Margin="15" Padding="10" Click="InitializeDatabase_Click" Background="#B0E0E6"/>
            <Button Content="Reset Database" Margin="15" Padding="10" Click="ResetDatabase_Click" Background="#B0E0E6"/>
            <Button Content="Simulator" Margin="15" Padding="12" Click="StartSimulator_Click" Background="#B0E0E6"/>
        </StackPanel>

        <!-- StackPanel for Handle Calls and Handle Volunteers buttons (Row 4) -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Left" Margin="311,95,0,0" Height="93" VerticalAlignment="Top" Width="421" Background="#FFFAF0">
            <Button Content="Handle Calls" Margin="15" Padding="10" Click="HandleCalls_Click" Background="#B0E0E6"/>
            <Button Content="Handle Volunteers" Margin="15" Padding="10" Click="HandleVolunteers_Click" Background="#B0E0E6"/>
        </StackPanel>

        <!-- ListView for displaying Call Statuses and Counts -->
        <ListView Grid.Row="2" 
          ItemsSource="{Binding CallStatusesCounts, UpdateSourceTrigger=PropertyChanged}" 
          Margin="35,10,490,317"
          MouseDoubleClick="CallList_MouseDoubleClick" Grid.RowSpan="2">

            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Status" Width="150" DisplayMemberBinding="{Binding Key}" />
                    <GridViewColumn Header="Count" Width="100" DisplayMemberBinding="{Binding Value}" />
                </GridView>
            </ListView.View>
        </ListView>


    </Grid>
</Window>